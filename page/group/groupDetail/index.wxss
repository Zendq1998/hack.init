/* page/group/groupDetail/index.wxss */
.header {
  width: 100%;
  height: 360rpx;
  background-color: #5ec4f7;
}
.group-info {
  margin: 0 auto;
}
.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
}
.group-name {
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #fff;
}
.group-member {
  height: 280rpx;
  background-color: #fff;
}
.group-member-container {
  width: 630rpx;
  height: 100%;
  margin: 0 auto;
}
.group-member-icon {
  width: 60rpx;
  height: 40rpx;
}
.group-member-title {
  font-size: 32rpx;
  font-weight: bolder;
  margin-left: 40rpx;
}
.invite-bt {
  font-size: 26rpx;
  width: 158rpx;
  height: 68rpx;
}
.group-member-list {
  width: 100%;
  height: 150rpx;
}
.group-member-item {
  width: 20%;
  height: 130rpx;
  margin-top: 20rpx;
}
.bill-class-icon {
  width: 85rpx;
  height: 85rpx;
  border-radius: 100%;
  border: 1rpx solid #acacac;
}
.bill-class-text {
  font-size: 23rpx;
  margin-top: 10rpx;
}
.bill-list {
  width: 700rpx;
  margin: 0 auto;
  margin-top: 40rpx;
}
.step {
  width: 130rpx;
}
.bill-list-content {
  width: 540rpx;
}
.bill-item {
  width: 100%;
  height: 140rpx;
  background: #fff;
  margin-bottom: 58rpx;
  border-radius: 20rpx;
}
.bill-name {
  height: 85rpx;
  margin-left: 20rpx;
}
.who-pay-img {
  margin-left: 40rpx;
}
.why-pay-text {
  font-size: 28rpx;
}
.who-pay-text {
  font-size: 25rpx;
  color: #a5a5a5;
}
.bill-num {
  font-size: 45rpx;
  color: #5ec4f7;
  margin-right: 40rpx;
}