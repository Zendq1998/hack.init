.step {
    display: flex;
}
.step__icon {
    color: #ff4422;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 15rpx
}
.step__dot {
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    border: 1rpx solid #6ac5f5;
}
.step__dot--todo {
    border-color: #ddd
}
.step__line {
    flex: 1;
    width: 1rpx;
    height: 100%;
    background: #6ac5f5
}
.step__line--finish {
    background: #6ac5f5
}
.step__content {
    margin-bottom:100rpx
}
.step__desc {
    line-height:60rpx;
    font-size: 60rpx;
    color: #333;
    padding-right: 1rpx;
    margin-bottom: 10rpx
}
.step__desc--todo {
    color: #999
}
.step__title {
    font-size: 30rpx;
    color: #999;
    line-height:30rpx
}